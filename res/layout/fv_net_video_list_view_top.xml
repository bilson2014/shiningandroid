<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffffff"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/cate1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="最新"
                android:textColor="@color/app_main_color"
                android:textSize="@dimen/ur_text_size_6" />

            <View
                android:id="@+id/bottom_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/app_main_color" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/app_tab_divider_width"
            android:layout_height="match_parent"
            android:background="@drawable/tab_divider" />

        <LinearLayout
            android:id="@+id/cate2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="最热"
                android:textColor="@color/top_text_color_gray"
                android:textSize="@dimen/ur_text_size_6" />

            <View
                android:id="@+id/bottom_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/translut" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>