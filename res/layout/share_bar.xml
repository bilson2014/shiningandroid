<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.panfeng.shinning"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="26dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/share" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="分享"
            android:textColor="#808080"
            android:textSize="@dimen/ur_text_size_8"
            android:visibility="gone" />

        <com.panfeng.shining.widgets.TileButton
            android:id="@+id/s1"
            android:layout_width="@dimen/share_item_width"
            android:layout_height="@dimen/share_item_width"
            android:layout_gravity="center"
            android:background="@drawable/share_qq" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.panfeng.shining.widgets.TileButton
            android:id="@+id/s2"
            android:layout_width="@dimen/share_item_width"
            android:layout_height="@dimen/share_item_width"
            android:layout_gravity="center"
            android:background="@drawable/share_qq_zone" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:visibility="gone"
            android:layout_weight="1" />

        <com.panfeng.shining.widgets.TileButton
            android:id="@+id/s3"
            android:layout_width="@dimen/share_item_width"
            android:layout_height="@dimen/share_item_width"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="@drawable/share_friends" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.panfeng.shining.widgets.TileButton
            android:id="@+id/s4"
            android:layout_width="@dimen/share_item_width"
            android:layout_height="@dimen/share_item_width"
            android:layout_gravity="center"
            android:background="@drawable/share_weibo" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <com.panfeng.shining.widgets.TileButton
            android:id="@+id/s5"
            android:layout_width="@dimen/share_item_width"
            android:layout_height="@dimen/share_item_width"
            android:layout_gravity="center"
            android:background="@drawable/share_weixin" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>

</FrameLayout>