<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0000000"
 >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/new_bg"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/set_true"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/app_main_color"
                android:layout_gravity="center_horizontal"
                android:textSize="14sp"
                android:text="客官请确认将此视频设为铃声"
                />
   <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/s2nd_divider_line_color" />
            <ImageView
                android:id="@+id/sure_setvideo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:src="@drawable/sureyestitle" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/s2nd_divider_line_color" />
            


            <ImageView
                android:id="@+id/sure_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:src="@drawable/cancletitle" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>