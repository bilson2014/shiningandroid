<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/rank_img"
                android:layout_width="94dp"
                android:layout_height="160dp"
                android:scaleType="fitXY"
                android:src="@drawable/ifnot" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/rank_videoname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
              
                    android:text="haotyui"
                    android:textColor="@color/s2nd_text_color_newlv1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/rank_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="HHHHH"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/rank_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="haodedasda"
                android:textColor="@color/s2nd_text_color_lv3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rank_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="ok"
                android:textColor="@color/s2nd_text_color_lv3"
                android:textSize="14sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/rank_look"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ni" />

                <TextView
                    android:id="@+id/rank_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hao" />

                <TextView
                    android:id="@+id/rank_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ma" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/s2nd_divider_line_color" />

</LinearLayout>