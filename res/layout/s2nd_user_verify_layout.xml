<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.panfeng.shinning"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/new_bg" >

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/s2nd_margin_normal"
        android:background="@color/new_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/part1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/s2nd_margin_normal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="验证"
                android:textColor="@color/s2nd_text_color_lv1"
                android:textSize="@dimen/s2nd_wordsize_big" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/s2nd_divider_line_color" />

        <LinearLayout
            android:id="@+id/part2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="@dimen/s2nd_margin_normal"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/s2nd_verify_phone" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s2nd_margin_normal"
                android:layout_weight="1"
                android:background="#00000000"
                android:maxLength="11"
                android:gravity="left"
                android:hint="请输入您的手机号"
                android:inputType="number"
                android:textColor="@color/s2nd_text_color_lv1"
                android:textCursorDrawable="@color/s2nd_text_color_lv2"
                android:textSize="@dimen/s2nd_wordsize_mid" >
            </EditText>

            <TextView
                android:id="@+id/recount"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/s2nd_base_button_background_3"
                android:gravity="center"
                android:padding="@dimen/s2nd_margin_small"
                android:text="验证码"
                android:textColor="#ffffff"
                android:textSize="@dimen/s2nd_wordsize_mid" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/s2nd_divider_line_color" />

        <LinearLayout
            android:id="@+id/part3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="@dimen/s2nd_margin_normal"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/s2nd_verify_code" />

            <EditText
                android:id="@+id/pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/s2nd_margin_normal"
                android:layout_weight="1"
                android:background="#00000000"
                android:maxLength="4"
                android:gravity="left"
                android:hint="请输入您的验证码"
                android:inputType="number"
                android:textColor="@color/s2nd_text_color_lv1"
                android:textCursorDrawable="@color/s2nd_text_color_lv2"
                android:textSize="@dimen/s2nd_wordsize_mid" >
            </EditText>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/s2nd_divider_line_color" />

        <LinearLayout
            android:id="@+id/part4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/s2nd_margin_normal"
            android:orientation="horizontal" >

            <com.panfeng.shining.widgets.TileButton
                android:id="@+id/login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s2nd_margin_big"
                android:layout_marginRight="@dimen/s2nd_margin_big"
                android:layout_marginTop="40dp"
                android:layout_weight="1"
                android:background="@drawable/s2nd_base_button_background_1"
                android:padding="@dimen/s2nd_margin_normal"
                android:text="登录"
                android:textColor="@color/s2nd_app_main_color"
                android:textSize="@dimen/s2nd_text_size_normal" />
            
            
        
            
            
            
            
        </LinearLayout>
        
            <ImageView
                android:id="@+id/close"
                android:layout_marginTop="40dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/circlex" />
    </LinearLayout>

</LinearLayout>