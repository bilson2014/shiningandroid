<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null" >
    
    


    <RelativeLayout
        android:id="@+id/main_redialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/showdiglog_bg"
        android:layout_centerInParent="true"
        >

   

        <LinearLayout
            
            android:layout_centerInParent="true"
            android:id="@+id/toplaymyvideolayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_alignParentLeft="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/toplaymyvideo" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                     android:textSize="@dimen/s2nd_margin_small_v3"
                android:text="拍摄视频" />
        </LinearLayout>

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:id="@+id/tolocallayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tolocal" />

            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="@dimen/s2nd_margin_small_v3"
                android:gravity="center"
                android:text="本地视频" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>