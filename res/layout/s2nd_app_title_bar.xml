<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.panfeng.shinning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/s2nd_app_main_color"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp" >

        <ImageView
            android:id="@+id/back"
            android:padding="4dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/s2nd_back" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/star_frame"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible" >

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="铃声库"
            android:textColor="@color/color_white"
            android:textSize="@dimen/s2nd_wordsize_big" />
        

        <ImageView
            android:id="@+id/title_star"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/title_star"
            android:visibility="invisible" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginRight="5dp" >

        <ImageView
            android:id="@+id/more"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/add_friends"
            android:visibility="invisible" />
    </FrameLayout>

</LinearLayout>