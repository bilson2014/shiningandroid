<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.panfeng.shinning"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/s2nd_margin_small"
        android:orientation="horizontal" >
        
        
          <ImageView
            android:id="@+id/icon"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_launcher"
            android:layout_gravity="center_vertical"
            
            />
        

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/s2nd_margin_normal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置菜单"
                
                android:textColor="@color/s2nd_text_color_newlv1"
                android:textSize="@dimen/s2nd_wordsize_mid" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置菜单"
                android:textColor="@color/s2nd_text_color_lv3"
                android:textSize="@dimen/s2nd_wordsize_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/s2nd_margin_normal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/on_off"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:src="@drawable/s2nd_on" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭/开启"
                android:layout_marginBottom="10dp"
                android:textColor="@color/s2nd_text_color_lv3"
                android:textSize="@dimen/s2nd_wordsize_small" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/s2nd_divider_line_color" />
</LinearLayout>