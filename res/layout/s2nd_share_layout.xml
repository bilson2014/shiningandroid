<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical" >

    <View
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/share_item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/s2nd_white_gray_btn"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/s2nd_margin_normal"
            android:src="@drawable/s2nd_qq" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="分享到QQ"
            android:textColor="@color/s2nd_text_color_lv1"
            android:textSize="@dimen/s2nd_wordsize_mid" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/s2nd_divider_line_color" />

    <LinearLayout
        android:id="@+id/share_item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/s2nd_white_gray_btn"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/s2nd_margin_normal"
            android:src="@drawable/s2nd_weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="分享到微信"
            android:textColor="@color/s2nd_text_color_lv1"
            android:textSize="@dimen/s2nd_wordsize_mid" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/s2nd_divider_line_color" />

    <LinearLayout
        android:id="@+id/share_item_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/s2nd_white_gray_btn"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/s2nd_margin_normal"
            android:src="@drawable/s2nd_circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="分享到朋友圈"
            android:textColor="@color/s2nd_text_color_lv1"
            android:textSize="@dimen/s2nd_wordsize_mid" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/share_item_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@drawable/s2nd_white_gray_btn"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/s2nd_margin_normal"
            android:src="@drawable/s2nd_weibo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="分享到微博"
            android:textColor="@color/s2nd_text_color_lv1"
            android:textSize="@dimen/s2nd_wordsize_mid" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/s2nd_divider_line_color" />

    <LinearLayout
        android:id="@+id/share_item_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/s2nd_white_gray_btn"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="@dimen/s2nd_margin_normal"
            android:src="@drawable/link"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="复制分享链接"
            android:textColor="@color/s2nd_text_color_lv1"
            android:textSize="@dimen/s2nd_wordsize_mid" />
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#c0000000" />

    <FrameLayout
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/s2nd_white_gray_btn" >
        
        

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/s2nd_margin_normal"
            android:text="取消"
            android:textColor="@color/s2nd_text_color_lv1"
            android:textSize="@dimen/s2nd_wordsize_mid" />
    </FrameLayout>

</LinearLayout>